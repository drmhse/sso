# Database
DATABASE_URL=sqlite:./data.db

# JWT Configuration
JWT_SECRET=your-super-secret-jwt-key
JWT_EXPIRATION_HOURS=24

# GitHub OAuth
GITHUB_CLIENT_ID=your-github-client-id
GITHUB_CLIENT_SECRET=your-github-client-secret
GITHUB_REDIRECT_URI=http://localhost:3000/auth/github/callback

# Google OAuth
GOOGLE_CLIENT_ID=your-google-client-id
GOOGLE_CLIENT_SECRET=your-google-client-secret
GOOGLE_REDIRECT_URI=http://localhost:3000/auth/google/callback

# Microsoft OAuth
MICROSOFT_CLIENT_ID=your-microsoft-client-id
MICROSOFT_CLIENT_SECRET=your-microsoft-client-secret
MICROSOFT_REDIRECT_URI=http://localhost:3000/auth/microsoft/callback

# Platform's own OAuth for Admin Dashboard Login (used for management access)
PLATFORM_GITHUB_CLIENT_ID=your-platform-admin-github-client-id
PLATFORM_GITHUB_CLIENT_SECRET=your-platform-admin-github-client-secret
PLATFORM_GOOGLE_CLIENT_ID=your-platform-admin-google-client-id
PLATFORM_GOOGLE_CLIENT_SECRET=your-platform-admin-google-client-secret
PLATFORM_MICROSOFT_CLIENT_ID=your-platform-admin-microsoft-client-id
PLATFORM_MICROSOFT_CLIENT_SECRET=your-platform-admin-microsoft-client-secret

# Stripe
STRIPE_SECRET_KEY=sk_test_your-stripe-secret-key
STRIPE_WEBHOOK_SECRET=whsec_your-stripe-webhook-secret

# Server Configuration
SERVER_HOST=0.0.0.0
